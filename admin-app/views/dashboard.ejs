<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>QSys Admin - Dashboard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="/public/css/style.css">
  </head>
  <body>
    <header class="topbar">
      <div class="topbar-left">
        <h1>QSys Admin</h1>
        <% if (user) { %>
          <div class="subtitle"><%= user.name %> (<%= user.email %>)</div>
        <% } %>
      </div>
      <div class="topbar-right">
        <form method="post" action="/logout">
          <button class="btn btn-ghost" type="submit">Logout</button>
        </form>
      </div>
    </header>

    <nav class="nav">
      <a href="/dashboard">Dashboard</a>
      <a href="/branches">Branches</a>
      <a href="/users">Users</a>
      <a href="/reports">Reports</a>
      <a href="/qrcodes">QR Codes</a>
    </nav>

    <main class="page">
  <section class="grid grid-2">
    <div class="card">
      <h2>Daily Overview</h2>
      <p>Date (Manila): <strong id="dk"><%= today %></strong></p>

      <div class="kpis">
        <div class="kpi"><div class="kpi-label">Reserved</div><div class="kpi-val" id="kpi-reserved">—</div></div>
        <div class="kpi"><div class="kpi-label">Seated</div><div class="kpi-val" id="kpi-seated">—</div></div>
        <div class="kpi"><div class="kpi-label">Skipped</div><div class="kpi-val" id="kpi-skipped">—</div></div>
      </div>

      <div class="kpis mt">
        <div class="kpi"><div class="kpi-label">Waiting P</div><div class="kpi-val" id="kpi-wp">—</div></div>
        <div class="kpi"><div class="kpi-label">Waiting A</div><div class="kpi-val" id="kpi-wa">—</div></div>
        <div class="kpi"><div class="kpi-label">Waiting B</div><div class="kpi-val" id="kpi-wb">—</div></div>
        <div class="kpi"><div class="kpi-label">Waiting C</div><div class="kpi-val" id="kpi-wc">—</div></div>
      </div>
    </div>

    <div class="card">
      <h2>Filters</h2>
      <label class="field">
        <span>Date (Manila)</span>
        <input id="dateKey" type="date" value="<%= today %>">
      </label>
      <button class="btn btn-primary mt" id="btnRefresh">Refresh</button>

      <p class="muted mt" id="dashStatus">—</p>
    </div>
  </section>

  <section class="card mt">
    <h2>By Branch</h2>
    <div class="table-wrap">
      <table class="table" id="branchTable">
        <thead>
          <tr>
            <th>Branch</th>
            <th>Reserved</th>
            <th>Seated</th>
            <th>Skipped</th>
            <th>Waiting P</th>
            <th>Waiting A</th>
            <th>Waiting B</th>
            <th>Waiting C</th>
            <th>Updated</th>
          </tr>
        </thead>
        <tbody>
          <tr><td colspan="9">Loading…</td></tr>
        </tbody>
      </table>
    </div>
  </section>
</main>


    <script src="/public/js/main.js"></script>
  </body>
</html>
