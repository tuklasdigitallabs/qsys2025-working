<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Guest Registration</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
  <main class="container">
    <div class="card">
      <h1 class="title">Guest Registration</h1>
      <p class="branch">Branch: <strong><%= branch.name %></strong></p>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert"><%= error %></div>
      <% } %>

      <form method="post" action="/register/<%= branch.code %>" class="form">
        <label class="label">Name <span class="req">*</span></label>
        <input class="input" type="text" name="name" placeholder="Your Name" value="<%= (form && form.name) || '' %>" required>

        <label class="label">Number of Guests (Pax) <span class="req">*</span></label>
        <input class="input" type="number" name="pax" placeholder="e.g. 2" min="1" value="<%= (form && form.pax) || '' %>" required>

        <!-- NEW: Priority Dropdown -->
        <label class="label">Priority</label>
        <select class="input" name="priority">
          <option value="none" <%= (form && form.priority === 'none') ? 'selected' : '' %>>None</option>
          <option value="senior" <%= (form && form.priority === 'senior') ? 'selected' : '' %>>Senior Citizen</option>
          <option value="pwd" <%= (form && form.priority === 'pwd') ? 'selected' : '' %>>PWD</option>
        </select>

        <label class="label">Phone Number <span class="optional">(optional)</span></label>
        <input class="input" type="tel" name="phone" placeholder="09xx xxx xxxx" value="<%= (form && form.phone) || '' %>">

        <button class="btn" type="submit">Get Queue Number</button>
      </form>
    </div>
  </main>
</body>
</html>
